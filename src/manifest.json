{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://auckland.au.panopto.com/",
  "description": "Crowdsourced Captions editor for Panopto",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "https://auckland.au.panopto.com/Panopto/Pages/Viewer.aspx",
    "https://aucklandtest.au.panopto.com/Panopto/Pages/Viewer.aspx"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://auckland.au.panopto.com/Panopto/Pages/Viewer.aspx*",
        "https://aucklandtest.au.panopto.com/Panopto/Pages/Viewer.aspx*"
      ],
      "js": [
        "js/content-script.js"
      ]
    }
  ]
}